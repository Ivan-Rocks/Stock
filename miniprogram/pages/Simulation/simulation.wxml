  <view>余额: {{submit_status}}</view>
  <view class="right-box">净利: {{submit_status}}</view>
</view>

<view>
  <image src = "img.jpg"  />
</view>

<view>
  <text>输入以“12345”改变提交状态</text>
  <input type="text" bindinput="setStatus" placeholder="请输入"> </input>
  <text>Input value is: {{input_val}}</text>
